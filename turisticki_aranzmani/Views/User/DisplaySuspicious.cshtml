@model dynamic

@{
    ViewBag.Title = "Sumnjivi korisnici";
}
<div class="mt-4">
    <h4 class="text-center">Prikaz sumnjivih korisnika</h4>
    <div class="row">
        <div class="col-md-6">
            <h6 class="text-center">Blokirani korisnici</h6>
            @foreach (var blockedUser in Model.BlockedUsers)
            {
                <div class="card my-3">
                    <div class="card-header">
                        @blockedUser.Username
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary btn-block w-50 mx-auto" onclick="location.href = '/admin/unblockUser/@blockedUser.Username'">Odblokiraj korisnika</button>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h6 class="text-center">Korisnici za blokiranje</h6>
            @foreach (var blockedUser in Model.UsersToBlock)
            {
                <div class="card my-3">
                    <div class="card-header">
                        @blockedUser.Username
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary btn-block w-50 mx-auto" onclick="location.href = '/admin/blockUser/@blockedUser.Username'">Blokiraj korisnika</button>
                    </div>
                </div>
            }
        </div>

    </div>
