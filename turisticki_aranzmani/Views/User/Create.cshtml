@model turisticki_aranzmani.Models.UserModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-5 container">
        <h4>Kreirajte novog korisnika</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Username, "Korisnicko ime")

                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, "Lozinka")

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, "Ime")

                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, "Prezime")

                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Email adresa")

            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Birthday, "Datum rodjenja")

            @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
        </div>
        <div class=" row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Gender, "Pol")


                    @Html.DropDownListFor(m => m.Gender, new List<SelectListItem> {
                    new SelectListItem{Text = "Muski", Value = "m"},
                    new SelectListItem{Text = "Zenski", Value = "f"},
                  }, new { @class = "form-control" })
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Role, "Uloga")

                    @Html.DropDownListFor(m => m.Role, new List<SelectListItem> {
                    new SelectListItem{Text = "Korisnik", Value = "user"},
                    new SelectListItem{Text = "Menadzer", Value = "seller"}
                  }, new { @class = "form-control" })
                </div>

            </div>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodajte korisnika" class="btn btn-primary btn-block mx-auto w-50" />
            </div>
        </div>
    </div>
}

